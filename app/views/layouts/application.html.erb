<!DOCTYPE html>
<html>
<head>
  <title>Photogur</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash.any? %>
      <% flash.each do |key, value| %>
        <p class=“<%= key %>“>
          <%= value %>
        </p>
      <% end %>
    <% end %>

   <p class=“userinfo”>
      <% if current_user %>
      Signed in as <%= current_user.email %>. <%= link_to “Logout”, sessions_path(“current”), :method => :delete %>
      <% else %>
      <%= link_to “Log in”, new_sessions_path %> or <%= link_to “Sign up”, new_users_path %>
      <% end %>
    </p>

<%= yield %>

</body>
</html>
